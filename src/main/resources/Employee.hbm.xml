<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.example.domain.Employee" table="employee">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="phone" column="phone" type="string"/>

        <!-- Many-to-One relationship with Departement -->
        <many-to-one name="departement" class="com.example.domain.Departement" column="departement_id" not-null="true"/>

        <!-- Many-to-One relationship with Job -->
        <many-to-one name="job" class="com.example.domain.Job" column="job_id" not-null="true"/>
    </class>
</hibernate-mapping>
