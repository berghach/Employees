<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="entities.Job" table="job">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>

        <!-- Many-to-One relationship with Department -->
        <many-to-one name="department" class="entities.Department" column="department_id" not-null="true"/>

        <list name="employees" cascade="all" fetch="select">
            <key column="job_id"/>
            <list-index column="employee_index"/>
            <one-to-many class="entities.Employee"/>
        </list>
    </class>
</hibernate-mapping>
